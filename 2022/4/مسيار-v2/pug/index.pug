                  .progress-2.position-relative
                      i.icon.fas.fa-comment-alt.position-absolute.top-50.start-50.translate-middle
                .col-lg-3.col-6.mb-3.text-center.position-relative
                   .progress-3
                      i.icon.fas.fa-heart.position-absolute.top-50.start-50.translate-middle
