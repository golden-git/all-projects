mixin head(title)
  head
    //- +meta-title(" من نحن ")
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    meta(http-equiv="x-ua-compatible", content="ie=edge")
    title=title
    include ../includes/styles
    
mixin input-font-icon(type, icon, title, btn)
  div.text-start
    label.form-label=title
  .mb-3.position-relative.input-style-container.form-floating.input-style-container-with-icon(style="width: 100%")
    span.form-icon
     i(class="mbi "+icon)
    if btn
      button.px-4.d-color-bg.icon.lef-0.m-color-bg-hover.text-white.btn=btn
    input.input-style.form-control(type=type)

mixin input-img-icon(type, src, title, btn)
  div.text-start
    label.form-label=title
  .mb-3.position-relative.input-style-container.form-floating.input-style-container-with-icon(style="width: 100%")
    span.form-icon
      img(src="../images/icons/"+src)
    if btn
      button.px-4.d-color-bg.icon.lef-0.m-color-bg-hover.text-white.btn=btn
    input.input-style.form-control(type=type)

mixin dash-input(lable1, label2, type, placeholder)
  .mb-3
    label.form-label.fw-bolder=lable1
    if label2
      span.mb-2.d-block.text-muted=label2
    input.form-control.form-select-lg.dash-input.rounded-pill(type=type, placeholder=placeholder)

mixin dash-input-calendar(lable1, label2, type, calendar)
  .mb-3.dash-input-calendar
    label.form-label.fw-bolder=lable1
    if label2
      span.mb-2.d-block.text-muted=label2
    input.form-control.form-select-lg.rounded-pill(type=type)
    span.calendar-label
      i.mbi.mbi-calendar-full.me-2.icon
      span=calendar


mixin dash-input-price(label, price)
  .mb-3.dash-input-price
    label.form-label.fw-bolder=label
    input.form-control.form-select-lg.rounded-pill(type="number")
    span.price-label=price

mixin dash-switch-between(label_1, label_2, id)
  .mb-3
    if label_1
      label.form-label.fw-bolder=label_1
    .form-check.form-switch.dash-switch-between.pointer
      label.pointer.form-check-label(for=id)=label_2
      input.pointer.form-check-input(type='checkbox', id=id, checked)

mixin dash-select(label_1, label_2, val)
  .mb-3
    if label_1
      label.mb-1.form-label.fw-bolder=label_1
      br
    if label_2
      label.form-label=label_2
    select.form-select.form-select-lg.dash-select.rounded-pill
      option(selected, value=val)=val

