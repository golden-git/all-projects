mixin custom-dashfile(name, id)
  .mb-3.position-relative.input-style-container.input-file
    .form-check
      label.pointer.form-check-label(for=id) جعلها صورة رئيسية
      input.pointer.form-check-input(type='radio', id=id, name=name)
    input.input-style.form-control.mb-0(type="file")
    .content
      img(src="../images/icons/img.png", width="70", height="70")
      span.file-name

mixin ar-en-input(title ,pills_id, ar_id, en_id, type)
  .lang
    h5=title
    ul.nav.nav-pills.mb-0(id=pills_id,role="tablist")
      li.nav-item(role="presentation")
        span.pointer.nav-link(
          id=ar_id, data-bs-toggle="pill", data-bs-target="#tab-pane"+ar_id,
          role="tab", aria-controls="tab-pane"+ar_id, aria-selected="false") عربي
      li.nav-item(role="presentation")
        span.pointer.nav-link.active(
          id=en_id, data-bs-toggle="pill", data-bs-target="#tab-pane"+en_id,
          role="tab", aria-controls="tab-pane"+en_id, aria-selected="true") English
  .lang-tab.tab-content#pills-tabContent
    .tab-pane.fade(id="tab-pane"+ar_id, role="tab", aria-labelledby=ar_id)
      if type == 'textarea'
        textarea.form-control.form-select-lg(cols="30", rows="10")
      else
        input.form-control.form-select-lg(type=type)
    .tab-pane.fade.show.active(id="tab-pane"+en_id, role="tab", aria-labelledby=en_id)
      if type == 'textarea'
        textarea.form-control.form-select-lg(cols="30", rows="10")
      else
        input.form-control.form-select-lg(type=type)

