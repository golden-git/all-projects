doctype html
html(dir="rtl", lang="ar")
  include ./mixins/all.pug
  +head(" الرسائل ")
  body.dashboard-body.mr-228
    include ./includes/sidebar
    .dashboard-container
        +dashboard-navbar("الرسائل")
        .d-lg-flex.mb-4.justify-content-between.mt-5
          h4.align-self-center الرسائل (345)

          .search
            i.mbi.mbi-magnifier
            input.form-control.form-control-lg(type="search", placeholder="ابحث عن طلب ")
            button.rounded-0.px-4.m-color-bg.btn-lg.d-color-bg-hover.text-white.btn بحث

        .chat.pb-4
          .row.py-4.py-3
              .col.lg-4.mb-3
                .border.rounded-3.users
                  .user-inf
                    div.mb-4
                      +user-card()
                    span.pointer.toogle-user-info.text-danger.rounded-pill.px-4.py-3.bg-danger-50 غلق النافزة

                  .pointer.toogle-user-info.user
                    img(src="../images/icons/user.png", alt="user")
                    div
                        p اسم العميل
                        h6 Mohamed Ali
                        p انا في طريقي اليك
                    span.message-count 1

                  .pointer.toogle-user-info.user.active
                    img(src="../images/icons/user.png", alt="user")
                    div
                        p مندوب توصيل
                        h6 Mohamed Ali
                        p انا في طريقي اليك

                  .pointer.toogle-user-info.user
                    img(src="../images/icons/user.png", alt="user")
                    div
                        p تاجر
                        h6 Mohamed Ali
                        p انا في طريقي اليك

              .col-lg-8
                .border.rounded-3.message-content
                    //- .text-end.px-4.pt-3
                    .d-flex.m-color-bg.justify-content-between.py-2.px-3
                        .align-self-center
                            .d-flex
                                img.rounded-circle.me-2(src="../images/icons/user.png", alt="user", width="60", height="60")
                                div.text-white.align-self-center
                                    p.mb-0 مندوب توصيل
                                    h6.mb-1 Mohamed Ali
                        .align-self-center.text-white
                            i.fas.fa-info-circle.h5.pointer
                    .message-container
                        .message-details.px-3.pt-3
                            .from
                                img.user-img(src="../images/icons/user.png", alt="user")
                                .message
                                    h6 Mohamed Ali
                                    p  انا في طريقي اليك
                            .to
                                .message
                                  p ارسل صورة المنتج
                            .from
                                img.user-img(src="../images/icons/user.png", alt="user")
                                .message
                                    h6 Mohamed Ali
                                    p  ارسل صورة المنتج
                                    div.file
                                      img.img-fluid(src="../images/products/2.jpg", alt="product img")
                                      p  صورة المنتج

                            .to
                                .message
                                  p صورة المنتج
                                  div.file
                                      img.img-fluid(src="../images/products/2.jpg", alt="product img")
                                      p  صورة جميلة
                            .from
                                img.user-img(src="../images/icons/user.png", alt="user")
                                .message
                                    h6 Mohamed Ali
                                    p شكراً
                                    p
                                      audio(class="player", controls)
                                          source(src='../images/1.mp3', type="audio/mpeg")
                            .to
                                .message
                                  p
                                      audio(class="player", controls)
                                          source(src='../images/1.mp3', type="audio/mpeg")
                            .from
                                img.user-img(src="../images/icons/user.png", alt="user")
                                .message
                                    h6 Mohamed Ali
                                    p
                                      span.writing(role="status")
                                      span.writing(role="status")
                                      span.writing(role="status")

                        .actions.my-4.row.mx-0
                            .col-11.pe-0
                                .position-relative
                                    i.fas.fa-microphone.voies.pointer.icons
                                    i.fas.fa-camera.camera.pointer.icons
                                    input.rounded-pill.form-control(type="text", placeholder="اكتب راسلتك")
                            .col-1
                                img.pointer.send(src="../images/icons/send.png", alt="send")




    include ./includes/scripts