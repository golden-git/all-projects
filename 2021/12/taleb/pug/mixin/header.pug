mixin tabel-header(title, id)
  .d-lg-flex.bg-gray-light.justify-content-lg-between.px-4.py-3
    h4.align-self-center= title
    .align-self-center
      button.btn.btn-primary.departments(data-toggle="modal", data-target=id)
        i.fa.fa-plus
        |  اضافة
      button.btn.btn-tool(type="button", data-card-widget="maximize")
        i.fas.fa-expand


mixin tabel-header-a(title, link)
  .d-lg-flex.bg-gray-light.justify-content-lg-between.px-4.py-3
    h4.align-self-center= title
    .align-self-center
      a.btn.btn-primary.departments(href=link)
        i.fa.fa-plus
        |  اضافة

      button.btn.btn-tool(type="button", data-card-widget="maximize")
        i.fas.fa-expand


mixin breadcrumb-in-1(title, span, link, href)
  .content-header
    .container-fluid
      .row.mb-2
        .col-sm-12.mb-3
          ol.breadcrumb
            li.breadcrumb-item
              a(href=href)=link
            li.breadcrumb-item
              span=span
        .col-sm-12
          h1=title

mixin breadcrumb-in-2(title, span, link1, href1, link2, href2)
  .content-header
    .container-fluid
      .row.mb-2
        .col-sm-12.mb-3
          ol.breadcrumb
            li.breadcrumb-item
              a(href=href1)=link1
            li.breadcrumb-item
              a(href=href2)=link2
            li.breadcrumb-item
              span=span
        .col-sm-12
          h1=title

mixin modal-header(title)
  .modal-header
    h5.modal-title=title
    button.close(type="button", data-dismiss="modal", aria-label="Close")
      span(aria-hidden="true") ×

mixin modal-footer(action)
   .modal-footer.justify-content-start
      button.btn.btn-secondary(type="button", data-dismiss="modal") اغلاق
      if action
        button.btn.btn-primary.add(type="button")=action


mixin tabel-option-link(showlink, editlink)
  td
    a.btn.btn-info.btn-xs(href=showlink)
      i.fa.fa-eye.mr-1
      | عرض

    .dropdown.d-inline-block
      button.btn.btn-default.btn-xs.dropdown-toggle(type="button", data-toggle="dropdown", aria-expanded="false")
        span المزيد
        span.caret
      .dropdown-menu
        a.dropdown-item.text-info(href=showlink)
          i.fa.fa-eye.mr-1
          span تفاصيل
        a.dropdown-item.text-warning(href=editlink)
          i.fa.fa-edit.mr-1
          span تعديل
        a.dropdown-item.delete.text-danger(href="#")
          i.fa.fa-trash.mr-1
          span حذف

